# InkFlow local environment template.
# Copy this file to ".env" and adjust values to match infra/docker-compose.yml.
# Do not commit real secrets into ".env".

# Runtime basics.
INKFLOW_ENV=local
INKFLOW_TIMEZONE=UTC

# PostgreSQL (Spring Boot standard).
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/inkflow
SPRING_DATASOURCE_USERNAME=inkflow
SPRING_DATASOURCE_PASSWORD=inkflow_pw

# MongoDB (Spring Boot standard).
SPRING_DATA_MONGODB_URI=mongodb://localhost:27017/inkflow

# Redis (Spring Boot standard).
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379

# Kafka (Spring Boot standard).
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SPRING_KAFKA_CLIENT_ID=inkflow-local

# MinIO/S3 (local dev; update for real S3).
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=inkflow
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=inkflow
AWS_SECRET_ACCESS_KEY=inkflow_pw

# Elasticsearch (Spring Boot standard).
SPRING_ELASTICSEARCH_URIS=http://localhost:9200
SPRING_ELASTICSEARCH_USERNAME=
SPRING_ELASTICSEARCH_PASSWORD=

# Observability (optional for local dev).
OTEL_SERVICE_NAME=inkflow-local
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
